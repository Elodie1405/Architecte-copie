{% extends 'base.html.twig' %}

{% block title %}Prise de RDV{% endblock %}

{% block body %}
<div class="container-list centre">

<h1 class="titre2"> Réservez un RDV Conseil de 2h en ligne</h1>

<h2 class="titre3"> Liste des disponibilités :</h2>

<div class="list-rdv">

{% for dispo in dispos %}

{% if dispo.reserved != "1" %}   
<div id="rdv">
    {{dispo.start}}
  
<br>
<a class="" href="{{path('add_rdv', {id: dispo.id})}}" >Sélectionner ce RDV</a>
</div>


<input type="hidden" id="dispo" name="dispo" value={{dispo.id}}>
{% endif %}
{% endfor %}

</div>

<a class="lien btn-lien" href="{{path('account')}}">Retour</a>


</div>
{% endblock %}
