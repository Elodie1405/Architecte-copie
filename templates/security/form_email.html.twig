{% extends 'base.html.twig' %}

{% block body %}

<div class="page">
    <h2 class="titre">FORMULAIRE DE CONTACT</h2>
    <br>
        <form id="contact-form" method="post" action="{{ path('emailSend') }}" role="form">
            <div class="messages"></div>

<!-- message alerte -->
<div  class="col-sm-12 col-lg-12 col-xl-12">
    {% for label, messages in app.flashes %}
    {% for message in messages %}
    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
        {% if label == 'success' %}
        <span class="alert-inner--icon"><i class="fe fe-thumbs-up"></i></span>
        {% else %}
        <span class="alert-inner--icon"><i class="fe fe-thumbs-down"></i></span>
        {% endif %}
        <span class="font alert-inner--text">{{ message | raw }}</span>
    </div>
    {% endfor %}
    {% endfor %}
</div>
<!-- fin message alerte -->

<div class="contact-form">
<div class="form-colonne">
        <div class="form-item1">
            <label for="form_lastname">Nom</label>
        </div>
        <div class="input">
            <input id="form_lastname" type="text" name="surname" class="form-style"
            placeholder="Veuillez saisir votre nom" required="required"
            data-error="Le nom est obligatoire.">
        </div>
        <div class="form-item1">
            <label for="form_name">Prénom</label>
        </div>
        <div class="input">
            <input id="form_name" type="text" name="name" class="form-style"
            placeholder="Veuillez saisir votre prénom" required="required"
            data-error="Le prénom est obligatoire.">
        </div>
        <div class="form-item1">
            <label for="form_email">Email</label>
        </div>
        <div class="input">
            <input id="form_email" type="email" name="email" class="form-style"
            placeholder="Veuillez saisir votre email" required="required"
            data-error="Merci de saisir un email valide.">
        </div>
</div>
<div class="form-colonne">
       
        <div class="form-item1"> <label for="form_need">Objet de votre mail</label>
        </div>
        <div class="input">
            <select id="form_need" name="need" class="form-style" required="required"
            data-error="Spécifiez l'objet de votre mail">
        <option value="Informations">Informations</option>
        <option value="Reclamation">Réclamation</option>   
        <option value="Autre">Autre</option>
    </select> 
        </div>
        <div class="form-item1">
            <label for="form_message">Message</label>
        </div>
        <div class="input">
            <textarea id="form_message" name="message"  placeholder="Message" class="form-style"
            rows="4" required="required" data-error="Please, leave us a message."></textarea>
        </div>
    </div>
        <br>
        <br>
    </div>

<div class="ajout">
    <input type="submit" class="realisation-btn" value="Envoyer">
</div>
<br>
</div>
</form>
</div>

{% endblock %}






